{
  "version": 6,
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "TMS570 Debug",
      "description": "Debug build for TMS570LC4357 using TI compiler",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "toolchainFile": "${sourceDir}/cmake/toolchain-ti-cgt-arm.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TARGET_MCU": "TMS570LC4357",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TRY_COMPILE_TARGET_TYPE": "STATIC_LIBRARY",
        "CMAKE_C_COMPILER_WORKS": "1"
      }
    },
    {
      "name": "release",
      "displayName": "TMS570 Release",
      "description": "Release build for TMS570LC4357 using TI compiler",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-release",
      "toolchainFile": "${sourceDir}/cmake/toolchain-ti-cgt-arm.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "TARGET_MCU": "TMS570LC4357",
        "ENABLE_LTO": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TRY_COMPILE_TARGET_TYPE": "STATIC_LIBRARY"
      }
    },
    {
      "name": "host-test",
      "displayName": "Host Unit Tests",
      "description": "Native build for unit tests",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-test",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "host-test",
      "configurePreset": "host-test"
    }
  ],
  "testPresets": [
    {
      "name": "host-test",
      "configurePreset": "host-test",
      "output": {
        "outputOnFailure": true,
        "verbosity": "default"
      },
      "execution": {
        "noTestsAction": "error"
      }
    }
  ]
}
